<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mobitill.barandrestaurant.receipts_detail.ReceiptsDetailFragment">


    <LinearLayout
        android:layout_marginTop="@dimen/dp16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_receipts_detail_orderNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginTop="@dimen/dp10"
            android:text="Order No. : "
            android:textSize="@dimen/sp25" />

        <EditText
            android:id="@+id/et_receipts_detail_orderNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp16"
            android:layout_marginTop="@dimen/dp10"
            android:inputType="number"
            android:padding="@dimen/sp10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/tv_balozi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginTop="@dimen/dp10"
            android:layout_weight="1"
            android:text="Products"
            android:textSize="@dimen/sp25" />

        <TextView
            android:id="@+id/tv_number_of_balozi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:layout_weight="1"
            android:text="Quantity"
            android:gravity="center_horizontal"
            android:textSize="@dimen/sp25" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginTop="@dimen/dp10"
            android:layout_weight="1"
            android:text="Price"
            android:gravity="center_horizontal"
            android:textSize="@dimen/sp25" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_items"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Total"
            android:layout_marginLeft="@dimen/dp16"
            android:textSize="@dimen/sp25"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_sum_total"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Sum Total"
            android:textSize="@dimen/sp20"
            android:gravity="center"
            android:layout_height="wrap_content"/>

    </LinearLayout>

        <Button
            android:id="@+id/btn_receipts_detail_checkOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp16"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp16"
            android:layout_weight="1"
            android:text="CheckOut"
            android:textAlignment="center"
            android:textSize="@dimen/sp25" />
</LinearLayout>
</ScrollView >