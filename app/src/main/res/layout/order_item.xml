<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:id="@+id/order_item"
              android:paddingTop="@dimen/padding_margin_small"
              android:paddingBottom="@dimen/padding_margin_small"
              android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_medium"
        android:text="Product"
        android:id="@+id/product_name"
        android:layout_centerVertical="true"

        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:textSize="@dimen/text_size_medium"
        android:layout_height="wrap_content"
        android:text="x1"
        android:id="@+id/quantity"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/button_remove"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_remove"
        android:src="@drawable/ic_remove_black"
        android:layout_toStartOf="@+id/button_add"
        android:layout_marginEnd="55dp"
        android:layout_alignParentTop="true"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_add"
        android:src="@drawable/ic_add_black"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"/>

</RelativeLayout>